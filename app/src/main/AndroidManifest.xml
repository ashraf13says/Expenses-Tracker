<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/logo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/logo"
        android:supportsRtl="true"
        android:theme="@style/Theme.ExpenseTracker">

        <!-- LoginActivity (your main entry point) -->
        <activity
            android:name=".ui.auth.LoginActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.ExpenseTracker.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- ADDED: MainActivity is now declared here -->
        <activity
            android:name="com.example.expensestracker.ui.MainActivity"
            android:exported="false"
            android:label="Main Activity"
            android:theme="@style/Theme.ExpenseTracker.NoActionBar"/>

        <!-- Other activities -->
        <activity android:name=".ui.auth.SignupActivity"
            android:exported="false"
            android:label="Sign Up"
            android:theme="@style/Theme.ExpenseTracker.NoActionBar"/>
        <activity android:name=".ui.expenses.ExpensesActivity"
            android:exported="false"
            android:label="Expenses"
            android:theme="@style/Theme.ExpenseTracker.NoActionBar"/>
        <activity android:name=".ui.charts.ChartsActivity"
            android:exported="false"
            android:label="Charts"
            android:theme="@style/Theme.ExpenseTracker.NoActionBar"/>
        <activity android:name=".ui.recommendation.RecommendationActivity"
            android:exported="false"
            android:label="Recommendations"
            android:theme="@style/Theme.ExpenseTracker.NoActionBar"/>
        <activity android:name=".ui.settings.SettingsActivity"
            android:exported="false"
            android:label="Settings"
            android:theme="@style/Theme.ExpenseTracker.NoActionBar"/>
        <activity android:name=".ui.expenses.ExpenseDetailActivity"
            android:exported="false"
            android:label="Expense Detail"
            android:theme="@style/Theme.ExpenseTracker.NoActionBar"/>

        <provider
            android:name="androidx.startup.InitializationProvider"
            android:authorities="${applicationId}.androidx-startup"
            android:exported="false"
            tools:node="merge">
            <meta-data android:name="androidx.work.WorkManagerInitializer"
                android:value="androidx.startup" />
        </provider>
    </application>
</manifest>
